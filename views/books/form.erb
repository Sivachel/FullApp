<form action="/<%= @book.id %>" method="post">

  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter the title of the book" value="<%= @book.title %>">
  </div>

  <div>
    <label>Body</label>
    <textarea name="book_body" placeholder="Enter a body"> <%= @book.book_body %></textarea>
  </div>

  <div>
    <input type="submit" value="Save post">
  </div>

  <% if(@book.id) %>
  <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
